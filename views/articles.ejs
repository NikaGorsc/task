<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/1.css">
</head>
<body>
    <% data.forEach(function(item) {%>
        <p class="articleList"><a href="http://localhost:3000/article/<%=item.idArticle %>"><%=item.titleArticle %></a>
            <p>
                <%=item.descriptionArticle %>
            </p>
            <% }); %>   
</body>
<script>
    document.querySelector("#deleteArticle").onclick=function(){
            event.preventDefault();
            let article={
                'idArticle':location.href.split("/").at(-1),
            }
            let promise = fetch('http://localhost:3000/admin/deleteArticle',{
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json;charset=utf-8'
                },
                body: JSON.stringify(article)
            })
            .then(response=> document.location='http://localhost:3000/admin/')
            .catch((error)=>{
                console.log(error);
            });
        }
</script>
</html>